# =====================================================
# DJANGO BACKEND CONFIGURATION
# =====================================================

# Core Django Settings
DJANGO_SECRET_KEY=your_KEY_goes_here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_ENV=production

# Database Configuration - PostgreSQL ONLY (SQLite is prohibited)
# Use PostgreSQL for all environments including development and testing
DATABASE_URL=postgresql://postgres:your_KEY_goes_here@localhost:5432/electra_db

# Test Database Configuration (separate database for testing)
TEST_DATABASE_URL=postgresql://postgres:your_KEY_goes_here@localhost:5432/electra_test

# JWT Configuration  
JWT_SECRET_KEY=your_KEY_goes_here
JWT_ACCESS_TOKEN_LIFETIME=900  # 15 minutes
JWT_REFRESH_TOKEN_LIFETIME=604800  # 7 days

# RSA Keys for JWT signing (file paths)
RSA_PRIVATE_KEY_PATH=keys/private_key.pem
RSA_PUBLIC_KEY_PATH=keys/public_key.pem

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_KEY_goes_here
SMTP_PASS=your_KEY_goes_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_KEY_goes_here
EMAIL_HOST_PASSWORD=your_KEY_goes_here
DEFAULT_FROM_EMAIL=noreply@electra.com
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Use mock email backend for local development (set to True for testing)
USE_MOCK_EMAIL=False

# Redis Configuration (for caching/sessions) - REQUIRED
# Redis is required for all caching and session storage (local memory cache prohibited)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@electra.com
ADMIN_PASSWORD=your_KEY_goes_here
ADMIN_URL=admin/

# =====================================================
# MONITORING & OBSERVABILITY
# =====================================================

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=electra-django
OTEL_RESOURCE_ATTRIBUTES=service.name=electra-django,service.version=1.0.0
OTEL_EXPORTER_JAEGER_AGENT_HOST=jaeger
OTEL_EXPORTER_JAEGER_AGENT_PORT=14268
OTEL_EXPORTER_JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Sentry Configuration
SENTRY_DSN=your_KEY_goes_here
SENTRY_ENVIRONMENT=production
RELEASE_VERSION=1.0.0

# Prometheus Metrics
ELECTRA_METRICS_PREFIX=electra
ELECTRA_METRICS_ENABLED=True
PROMETHEUS_EXPORT_MIGRATIONS=False

# =====================================================
# FIREBASE & PUSH NOTIFICATIONS (FCM)
# =====================================================

# Firebase Cloud Messaging (FCM) Configuration
FCM_SERVER_KEY=your_KEY_goes_here
FCM_SENDER_ID=your_KEY_goes_here
FIREBASE_PROJECT_ID=your_KEY_goes_here
FIREBASE_API_KEY=your_KEY_goes_here
FIREBASE_AUTH_DOMAIN=your_KEY_goes_here.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your_KEY_goes_here.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_KEY_goes_here
FIREBASE_APP_ID=your_KEY_goes_here
FIREBASE_MEASUREMENT_ID=your_KEY_goes_here

# =====================================================
# CLOUD STORAGE & CDN
# =====================================================

# AWS Configuration (if using cloud services)
AWS_ACCESS_KEY_ID=your_KEY_goes_here
AWS_SECRET_ACCESS_KEY=your_KEY_goes_here
AWS_REGION=us-west-2
AWS_STORAGE_BUCKET_NAME=your_KEY_goes_here
AWS_S3_REGION_NAME=us-west-2
AWS_S3_FILE_OVERWRITE=False
AWS_DEFAULT_ACL=private

# =====================================================
# BACKUP & DATA PROTECTION
# =====================================================

# Backup Configuration  
BACKUP_ENCRYPTION_KEY=your_KEY_goes_here
BACKUP_DIR=/var/backups/electra
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_KEY_goes_here

# =====================================================
# CI/CD & DEPLOYMENT
# =====================================================

# Docker Registry Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_REGISTRY_USER=your_KEY_goes_here
DOCKER_REGISTRY_TOKEN=your_KEY_goes_here

# Kubernetes Configuration
KUBECONFIG_PATH=/path/to/kubeconfig
KUBECTL_CONTEXT=your_KEY_goes_here

# =====================================================
# ALERTING & NOTIFICATIONS
# =====================================================

# Slack Webhook for Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/your_KEY_goes_here
MONITORING_SLACK_WEBHOOK=https://hooks.slack.com/your_KEY_goes_here

# Email Alerting
MONITORING_EMAIL_FROM=alerts@your-domain.com
MONITORING_EMAIL_PASSWORD=your_KEY_goes_here

# Security Scanning
SNYK_TOKEN=your_KEY_goes_here

# =====================================================
# FRONTEND/FLUTTER CONFIGURATION
# =====================================================

# API Base URLs
API_BASE_URL=https://your-api-server.com:8000
API_VERSION=v1
WS_BASE_URL=wss://your-api-server.com:8000

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your_KEY_goes_here
MIXPANEL_TOKEN=your_KEY_goes_here
AMPLITUDE_API_KEY=your_KEY_goes_here

# Social Authentication (if needed)
GOOGLE_CLIENT_ID=your_KEY_goes_here
GOOGLE_CLIENT_SECRET=your_KEY_goes_here

# Feature Flags
ENABLE_BIOMETRICS=true
ENABLE_OFFLINE_VOTING=true
ENABLE_ANALYTICS=true  
ENABLE_NOTIFICATIONS=true
ENABLE_DARK_MODE=true

# University Branding
UNIVERSITY_NAME=Kwara State University
UNIVERSITY_ABBR=KWASU
SUPPORT_EMAIL=electoral@kwasu.edu.ng
SUPPORT_PHONE=+234-XXX-XXX-XXXX

# =====================================================
# DEVELOPMENT & TESTING
# =====================================================

# Development Environment
DEVELOPMENT_MODE=false
DEBUG_TOOLBAR=false
TEST_DATABASE_URL=postgresql://postgres:your_KEY_goes_here@localhost:5432/electra_test

# SSL Configuration for Development
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem