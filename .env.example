# Django Settings
DJANGO_SECRET_KEY=your_KEY_goes_here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://postgres:your_KEY_goes_here@localhost:5432/electra_db

# JWT Configuration
JWT_SECRET_KEY=your_KEY_goes_here
JWT_ACCESS_TOKEN_LIFETIME=900  # 15 minutes
JWT_REFRESH_TOKEN_LIFETIME=604800  # 7 days

# RSA Keys for JWT signing (paths)
RSA_PRIVATE_KEY_PATH=keys/private_key.pem
RSA_PUBLIC_KEY_PATH=keys/public_key.pem

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_KEY_goes_here
SMTP_PASS=your_KEY_goes_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_KEY_goes_here
EMAIL_HOST_PASSWORD=your_KEY_goes_here
DEFAULT_FROM_EMAIL=noreply@electra.com

# Use mock email backend for local development (set to True for testing)
USE_MOCK_EMAIL=False

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Admin User for Seeding
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@electra.com
ADMIN_PASSWORD=your_KEY_goes_here

# Redis (for caching/sessions if needed)
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CI/CD Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_REGISTRY_USER=your_KEY_goes_here
DOCKER_REGISTRY_TOKEN=your_KEY_goes_here

# Backup Configuration  
BACKUP_ENCRYPTION_KEY=your_KEY_goes_here
BACKUP_DIR=/var/backups/electra

# AWS Configuration (if using cloud services)
AWS_ACCESS_KEY_ID=your_KEY_goes_here
AWS_SECRET_ACCESS_KEY=your_KEY_goes_here
AWS_REGION=us-west-2
AWS_STORAGE_BUCKET_NAME=your_KEY_goes_here

# Kubernetes Configuration
KUBECONFIG_PATH=/path/to/kubeconfig
KUBECTL_CONTEXT=your_KEY_goes_here

# Monitoring and Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/your_KEY_goes_here
SNYK_TOKEN=your_KEY_goes_here